\mode<presentation>



\newfontfamily{\os}{Roboto}
\setbeamerfont{frametitle}{family=\os}
\setbeamerfont{itemize/enumerate body}{family=\os,size=\Large}
\setbeamerfont{itemize item}{family=\os,size=\Huge}
\setbeamerfont{normal text}{family=\os}
\setbeamerfont{title}{family=\os}
\setbeamerfont{title page}{family=\os}
\defbeamertemplate{itemize item}{bigcircle}{\LARGE\raise-0.05cm\hbox{\textbullet}}


\pgfdeclareimage[width=\paperwidth,height=\paperheight]{background}{../images/background.png}
\renewcommand{\insertslideintonotes}[1]{{%
        \begin{pgfpicture}{0cm}{0cm}{#1\paperwidth}{#1\paperheight}
            \begin{pgflowlevelscope}{\pgftransformscale{#1}}%
                {\pgftransformshift{\pgfpointorigin}\pgftext[left,bottom]{\pgfuseimage{background}}}
                \color{normal text.fg}
                {\pgftransformshift{\pgfpoint{\beamer@origlmargin}{\footheight}}\pgftext[left,bottom]{\copy\beamer@frameboxcopy}}
            \end{pgflowlevelscope}
        \end{pgfpicture}%
}}

\setbeamertemplate{background}{%

    \begin{tikzpicture}[every node/.style={inner sep=0,outer sep=0}]
        \useasboundingbox (0,0) rectangle(\the\paperwidth,\the\paperheight);
        \node[anchor=south west] at (0,0) {\includegraphics[width=\the\paperwidth,height=\the\paperheight]{../images/background.png}};
        \ifnum\thepage=1\relax
        \node[anchor=north west] at (0,\the\paperheight) {\includegraphics[width=\the\paperwidth]{../images/loup.jpg}};
        \fi
         \FPsub{\minuspagenum}{\insertframenumber}{1};
        \FPsub{\minuspagetotal}{\inserttotalframenumber}{1};
        \ifnum\inserttotalframenumber>1\relax
         \FPdiv{\progress}{\minuspagenum}{\minuspagetotal};
         \draw[anchor=south west, line width=5pt, inuits!20!black] (0,0pt) -- (\paperwidth,0pt);
         \draw[anchor=south west, line width=5pt, inuits] (0,0pt) -- (\progress\paperwidth,0pt);
         \fi
        \ifx\bgimg\empty
        \else
           \draw[anchor=south west] (0\paperwidth,\videohead) node {\includegraphics[width=\paperwidth,height=\videosize]{\bgimg}};
        \fi
    \end{tikzpicture}

 %   \end{textblock}
}

\defbeamertemplate*{title page}{inuits}[1][]{%
        \vspace{3.5cm}
    \begin{beamercolorbox}{title page header}
        \begin{center}
            \huge\textbf{\contour{black}{\insertTitle}}\par%
        \end{center}
    \end{beamercolorbox}%
    \if\insertsubtitle\empty\else
    \begin{beamercolorbox}{title page header}
        \begin{center}
            \textbf{\contour{black}{\insertsubtitle}}\par%
        \end{center}
    \end{beamercolorbox}%
    \vspace{0.5cm}
    \fi
    \begin{beamercolorbox}{author}
        \begin{center}
            \insertauthor
        \end{center}
    \end{beamercolorbox}
    \if\insertsubtitle\empty\else
    \vspace{-0.4cm}
    \fi
    \vspace{0.01cm}
    \begin{beamercolorbox}{date}
        \begin{center}
           \insertdate
        \end{center}
    \end{beamercolorbox}
    \vfill
}


\defbeamertemplate*{frametitle}{inuits}[1][]
{%
    \vspace{0.095\paperheight}%
        \shadowrgb{0,0,0}
    \begin{center}
        \textbf{\huge{\contour{black}{\insertframetitle}}
    }
    \end{center}
    \ifx\insertframesubtitle\empty\else
    \begin{center}
        \LARGE\textbf{\color{white}\contour{black}{\insertframesubtitle}}
    \end{center}
    \fi
}
